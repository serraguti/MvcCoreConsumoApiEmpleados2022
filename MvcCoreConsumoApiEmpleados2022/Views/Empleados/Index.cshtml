@model List<LibrariesEmpleado.Empleado>

@{ 
    List<string> oficios = ViewData["OFICIOS"] as List<string>;
}

<h1>Consumo Api Empleados Servidor C#</h1>

<form method="post">
    <label>Oficios: </label>
    <select name="oficio" class="form-control">
        @foreach (string ofi in oficios)
        {
            <option value="@ofi">@ofi</option>
        }
    </select>
    <button type="submit" class="btn btn-info">
        Mostrar empleados
    </button>
</form>
<hr/>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Apellido</th>
            <th>Oficio</th>
            <th>Salario</th>
            <th>Departamento</th>
        </tr>
    </thead>
    <tbody>
        @foreach (LibrariesEmpleado.Empleado emp in Model)
        {
            <tr>
                <td>@emp.Apellido</td>
                <td>@emp.Oficio</td>
                <td>@emp.Salario</td>
                <td>@emp.IdDepartamento</td>
            </tr>
        }
    </tbody>
</table>